                @Html.DisplayFor(modelItem => item.LotSize)
            </td>
            <th>
                @Html.DisplayNameFor(model => item.IsAcres)
            </th>
            <td style="width: 13px;">
                @Html.DisplayFor(modelItem => item.IsAcres)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => item.State)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <th>
                @Html.DisplayNameFor(model => item.Bedrooms)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Bedrooms)
            </td>
            <th>
                @Html.DisplayNameFor(model => item.Description)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => item.Zipcode)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Zipcode)
            </td>
            <th>
                @Html.DisplayNameFor(model => item.FullBathrooms)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.FullBathrooms)
            </td>
            <th>
                @Html.DisplayNameFor(model => item.PartialBathrooms)
            </th>
